{
    "compilerOptions": {
        "jsx": "react-jsx", // compile JSX to React.createElement statements for SSR
        "baseUrl": ".",
        "esModuleInterop": true,
        "paths": {
            "@core/*": [
                "core/*",
            ],
            "@controller/*": [
                "server/controller/*",
            ],
            "@migration/*": [
                "server/database/migration/*",
            ],
            "@config/*": [
                "server/config/*",
            ],
            "@middleware/*": [
                "server/middleware/*",
            ],
            "@server/*": [
                "server/*",
            ],
            "@client/*": [
                "client/*",
            ],
        },
    }
}